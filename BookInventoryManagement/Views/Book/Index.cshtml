@model IEnumerable<BookInventoryManagement.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.bookId" class="btn btn-secondary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.bookId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.bookId" class="btn btn-red">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
